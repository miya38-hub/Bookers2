<div class="container px-5 px-sm-0">
  <div class="row">
  <% if @book&.errors&.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <%= render "layouts/sidebar", user: current_user, book: @book %>

    <!-- Âè≥ÂÅ¥ÔºöBooks‰∏ÄË¶ß -->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <!-- User -->
              <td>
                <%= link_to user_path(book.user) do %>
                  <% if book.user.profile_image&.attached? %>
                    <%= image_tag book.user.profile_image,
                                  style: "width:50px;height:50px;object-fit:cover;" %>
                  <% else %>
                    <%= image_tag "no_image.jpg",
                                  style: "width:50px;height:50px;" %>
                  <% end %>
                <% end %>
              </td>

              <!-- Title -->
              <td>
                <%= link_to book.title, book_path(book) %>
              </td>

              <!-- Opinion -->
              <td>
                <%= book.body %>
              </td>

              <!-- „ÅÑ„ÅÑ„Å≠ -->
              <td class="text-center">
                <% if book.favorited_by?(current_user) %>
                  <%= link_to book_favorite_path(book),
                              data: { turbo_method: :delete },
                              class: "text-danger text-decoration-none" do %>
                    ‚ù§Ô∏è <%= book.favorites.count %>
                  <% end %>
                <% else %>
                  <%= link_to book_favorite_path(book),
                              data: { turbo_method: :post },
                              class: "text-muted text-decoration-none" do %>
                    üíô <%= book.favorites.count %>
                  <% end %>
                <% end %>
              </td>

              <!-- „Ç≥„É°„É≥„ÉàÊï∞ -->
              <td class="text-center">
                „Ç≥„É°„É≥„ÉàÊï∞: <%= book.book_comments.count %>
              </td>

            </tr>
          <% end %>
        </tbody>

      </table>
    </div>

  </div>
</div>