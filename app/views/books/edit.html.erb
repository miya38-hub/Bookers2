<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-7">
      <h1 class="text-center mb-4">Editing Book</h1>

      <% if @book.errors.any? %>
        <div class="error">
          error
          <ul>
            <% @book.errors.full_messages.each do |m| %>
              <li><%= m %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @book, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :title, "Title" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :body, "Opinion" %>
          <%= f.text_area :body, class: "form-control", rows: 4 %>
        </div>

        <div class="mb-3">
          <%= f.submit "Update Book", class: "btn btn-success" %>
        </div>
      <% end %>

      <div>
        <%= link_to "Show", book_path(@book) %> |
        <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</div>