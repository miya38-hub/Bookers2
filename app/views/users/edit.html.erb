<div class="container mt-5">
  <div class="row">
    <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6 text-center">

      <h1>User info</h1>

      <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <ul class="mb-0">
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @user, local: true do |f| %>

        <div class="mb-3 text-start">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="mb-3 text-start">
          <%= f.label :introduction, class: "form-label" %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>

        <div class="mb-3 text-start">
          <%= f.label :profile_image, class: "form-label" %>
          <%= f.file_field :profile_image, class: "form-control" %>
        </div>

        <div class="mt-4">
          <%= f.submit "Update User", class: "btn btn-success btn-block w-100" %>
        </div>

      <% end %>

    </div>
  </div>
</div>