<% if flash[:alert] %>
  <div class="alert alert-danger"><%= flash[:alert] %></div>
<% end %>

<h2>Log in</h2>

<%= form_with scope: :user, url: session_path, method: :post, local: true, data: { turbo: false } do |f| %>
  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name, id: "name" %>
  </div>

  <div class="mt-3">
    <%= f.label :password %><br>
    <%= f.password_field :password, id: "password" %>
  </div>

  <div class="mt-4">
    <%= f.submit "Log in", class: "btn btn-primary" %>
  </div>

  <%= link_to "Sign up", new_user_path %>
<% end %>